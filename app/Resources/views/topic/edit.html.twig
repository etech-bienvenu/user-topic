{% block body %}
    <h1>Topic edit</h1>

    {{ form_start(edit_form,{'attr':{'class':'form'}}) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" class="btn btn-primary"/>
    {{ form_end(edit_form) }}

    <a href="{{ path('topics_index') }}" class="btn btn-default">Back to the list</a>
