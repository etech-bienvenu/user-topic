{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    <img src="{{ asset('/uploads/avatars/')~user.photo }}" class="rounded-circle" width="40" height="40">
                </td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Datenaissance</th>
                <td>{% if user.dateNaissance %}{{ user.dateNaissance|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
            <a href="{{ path('users_index') }}" class="btn btn-primary">Back to the list</a>
            <a href="{{ path('users_edit', { 'id': user.id }) }}" class="btn btn-default">Edit</a>
            {{ form_start(delete_form,{'attr':{'class':'form'}}) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
{% endblock %}
