{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/css/gijgo.min.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
    <h1>User edit</h1>
    <img src="{{ asset('/uploads/avatars/')~user.photo }}" class="rounded-circle" width="40" height="40">
    {{ form_start(edit_form,{'attr':{'class':'form'}}) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" class="btn btn-default"/>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form,{'attr':{'class':'form'}}) }}
        <input type="submit" value="Delete" class="btn btn-danger">
    {{ form_end(delete_form) }}
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/js/gijgo.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $('.js-datepicker').datepicker({footer: true, modal: true,format:'mm/dd/yyyy'});
            console.log('Hi there');
        })
    </script>
{% endblock %}
